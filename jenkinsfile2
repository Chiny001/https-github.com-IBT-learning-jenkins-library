pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Hi') {
            steps {
                echo 'Hi me'
            }
        }
        stage('Test') {
            steps {
                echo 'TEXT Me Omotade'
            }
        }
        stage('Testing jenkins') {
                    steps {
                        echo 'TEXT Me Omotade, testing jenkins file'
                    }
                }
                stage('Git checkout') {
                                    steps {
                                        checkout scmGit(branches: [[name: '*/feature_omotadem']], extensions: [], userRemoteConfigs: [[credentialsId: 'tomo26git', url: 'https://github.com/IBT-learning/ibt-maven.git']])
                                        sh 'ls -lrt'
                                    }
                                }
    }
}
