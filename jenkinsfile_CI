pipeline {
agent any
tools { maven 'maven_3.8'}
stages {
    stage ('Git checkout'){
        steps {
            git branch: 'feature_lili', url: 'https://github.com/IBT-learning/ibt-maven.git'
        }
    }
    stage('validate'){
        steps{
            sh 'mvn validate'
        }
    }
    stage('compile'){
            steps{
                sh 'mvn compile'
            }
        }
    stage('test'){
            steps{
                sh 'mvn test'
            }
        }
    stage('package'){
            steps{
                withMaven(maven: 'maven_3.9.3') {
                    sh 'mvn package'
                }
            }
        }

    stage('deploy'){
            steps{
                withCredentials([file(credentialsId: 'maven_artifactory', variable: 'artifactory_settings')]) {
                    sh 'mvn deploy -s $artifactory_settings'
                }
            }
        }

}

}