pipeline {
    agent any
    stages {
        stage('Stage 1') {
            steps {
                echo 'Hello world!'
            }
        }
    stage('Validate') {
                 steps {
                  withMaven(globalMavenSettingsConfig: maven: ‘maven_3.8’, mavenSettingsConfig: ‘jfrog-mvn-settings’)
                      sh  'maven Validate'
                  }
                }
              }
          }
    }