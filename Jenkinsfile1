pipeline {
    agent any

    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'staging', description: 'which branch to build on')
        choice(name: 'CHOICES', choices: ['one', 'two', 'three'], description: 'chose your number')
    }

    stages {
        stage('Hi') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Hello') {
            steps {
                echo 'Hi this is chisom'
            }
        }
        stage('trying jenkinsfile1'){
            steps{
               echo "this is running from github"
            }
        }
        stage('Git checkout'){
           steps{
              git branch: '$BRANCH_NAME', changelog: false, credentialsId: 'ibt', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
            }
        }
        stage('list files'){
            steps{
                sh 'ls -lrt'
                    pwd
                    who
                    ...
                }
            }
        }

        stage('parameter'){
          steps{
             sh 'echo $CHOICES
          }
        }
    }
}