pipeline {
    agent any

    parameters {
        string(name: 'Branch_Name', defaultValue: 'main', description: 'Which branch to build on')
        choice(name: 'Choices', choices: ['one', 'two', 'three'], description: 'Choose your number')
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Hey') {
            steps {
                echo 'Hey this is Ros!'
            }
        }
        stage('Trying Jenkinsfile'){
            steps{
                echo "this is running from github"
            }
        }
        stage('Git Checkout'){
            steps{
                git branch: '$Branch_Name', changelog: false, credentialsId: 'git_creds', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
                sh 'ls -lrt'
            }
        }
        stage('Listing files') {
             steps {
                sh '''
                ls -lrt
                pwd
                who
                '''
             }
        }

        stage('parameter'){
            when{
                expression{
                    $Branch_Name=='main'
            }
            steps{
                sh 'echo $Choices'
            }
        }
    }
}