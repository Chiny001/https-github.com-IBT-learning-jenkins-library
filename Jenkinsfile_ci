pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                echo 'Hello World'
                echo 'Hi'
                echo 'Hell yeah!'
                checkout changelog: false, poll: false, scm: [$class: 'GitSCM', branches: [[name: '*/feature_koby2']], extensions: [], userRemoteConfigs: [[credentialsId: 'k-github', url: 'https://github.com/IBT-learning/ibt-maven.git']]]
            }
        }
        stage('Validate') {
                    steps {
                    sh "mvn validate"
                    }
                }
    }
    post {
        always {
            echo "ci done"
        }
    }
}
