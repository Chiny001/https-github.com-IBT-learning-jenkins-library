pipeline {
    agent any
    tools {
        }
    stages {
        stage('git checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/feature-dianna']], extensions: [], userRemoteConfigs: [[credentialsId: 'ibt', url: 'https://github.com/IBT-learning/ibt-maven.git']])
            }
        }
        stage('Validate') {
            steps {
                sh 'mvn validate'
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('SonarQube Analysis') {
            environment {
                sonarScan = tool 'ibt-sonarqube'
            }
            steps {
                withSonarQubeEnv(credentialsId: 'ibt-sonar', installationName: 'IBT sonarqube') {
                    sh "${env.sonarScan}/bin/sonar-scanner"
                }
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Deploy (configFile)') {
            steps {
                configFileProvider([configFile(fileId: 'artifactory-settings', variable: 'mvn_setting_config')]) {
                    sh 'mvn deploy -s $mvn_setting_config'
                }
            }
        }
    }
}

