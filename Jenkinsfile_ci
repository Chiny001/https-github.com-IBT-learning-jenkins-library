pipeline {
    agent any
    stages {
        stage('Git Checkout') {
            steps {
            git branch: '${Branch}', changelog: false, credentialsId: 'for-github', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'            }
        }
        stage('Build') {
            steps {
                sh "mvn validate"
            }
        }
        stage('Test') {
            when {
                expression {
                }
            }
            steps {
                echo 'Test'
                echo 'almost done'
            }
        }
        stage('Deploy') {
            steps {
            echo 'Deploy'
            }
        }
    }
}
