pipeline {
    agent any
    stages{
        stage('Git Checkout'){
            steps{
                echo "git checkout"
                git branch: 'feature-Martin2', changelog: false, credentialsId: 'mnchuks', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
            }
        }
        stage ('Validate'){
            steps{
             withMaven(maven: 'maven_3.8') {
                sh 'mvn validate'
             }  
            }
        }
    }
}