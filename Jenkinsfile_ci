pipeline{
    agent any

    stages{
    stage('Git Checkout') {
        steps{
        git branch: 'feature_iyke', changelog: false, credentialsId: 'Github_user_cred_iyke', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
        }
     }
    stage('mvn validate') {
            steps{
            withMaven(maven: 'maven_3.8') {
                sh 'mvn validate'
            }
            }
         }
    stage('mvn compile') {
                steps{
                withMaven(maven: 'maven_3.8') {
                    sh 'mvn compile'
                }
                }
             }
    stage('mvn Test') {
                    steps{
                    withMaven(maven: 'maven_3.8') {
                        sh 'mvn test'
                    }
                    }
                 }
    stage('SonarQube Analysis') {
        environment{
            sonarScan = tool 'ibt-sonarqube_4.8'
        }
                        steps{
                        withSonarQubeEnv(credentialsId: 'student-sonar-token', installationName: 'IBT sonarqube') {
                            sh "${env.sonarScan}/bin/sonar-scanner"
                        }
                        }
                        }
        stage('Package') {
                            steps{
                            withMaven(maven: 'maven_3.8') {
                                sh 'mvn package'
                            }
                            }
                         }
        stage('Dynamic scan'){
            steps{
                dependencyCheck additionalArguments: '''
                    -o "./"
                    -s "./"
                    -f "ALL"
                    --prettyPrint''', odcInstallation: 'dependency-check'
                dependencyCheckPublisher pattern: 'dependency-check-report.xml'
            }
        }
    }
}