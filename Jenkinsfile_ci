pipeline {
    agent any
    parameters {
        string(name: 'Branch', defaultValue:'feature_koby2', description: 'enter branch to build')
    }
    environment {
        Message="Jan26_Cohort"
    }
    stages {
        stage('Git Checkout') {
            steps {
            git branch: '${Branch}', changelog: false, credentialsId: 'for-github', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'            }
        }
        stage('Build') {
            steps {
                sh "mvn validate"
            }
        }
        stage('Test') {
            when {
                expression {
                env.BRANCH_NAME == "main"
                }
            }
            steps {
                echo 'Test'
                echo 'almost done'
                echo "${env.Message}"
            }
        }
        stage('Deploy') {
            steps {
            echo 'Deploy'
            echo 'Now'
            echo "${env.Message}"
            }
        }
    }
}