pipeline{
    agent any
    tools { maven 'maven_3.8' }
    stages {
        stage('Git checkout'){
            steps{
                checkout changelog: false, poll: false, scm: scmGit(branches: [[name: '*/feature/james']], extensions: [], userRemoteConfigs: [[credentialsId: 'git_James_c', url: 'https://github.com/IBT-learning/ibt-maven.git']])
            }
        }
        stage('Validate'){
            steps{
                sh 'mvn validate'
            }
        }
        stage('Compile'){
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test'){
            steps {
                sh 'mvn test'
            }
        }
        stage('Package'){
            steps {
                sh 'mvn package'
            }
        }
    }

}
