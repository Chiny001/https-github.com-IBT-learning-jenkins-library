pipeline{
    agent any

    stages {
    stage('Git checkout') {
                steps {
                    checkout changelog: false, poll: false, scm: [$class: 'GitSCM', branches: [[name: '*/feature_gunjan']], extensions: [], userRemoteConfigs: [[credentialsId: 'ibt', url: 'https://github.com/IBT-learning/ibt-maven.git']]]
                }
            }
     stage('Validate')
     {
        steps{
            sh "mvn validate"
        }
     }
     stage('Compile')
          {
             steps{
                 sh "mvn compile"
             }
          }
     stage('Run tests')
          {
             steps{
                 sh "mvn test"
             }
          }
       stage('Package')
            {
               steps{
                   sh "mvn package"
               }
            }
    }
}