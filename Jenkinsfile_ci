 pipeline{
agent any
tools {
    maven 'maven_3.9.3'
}

pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/feature-dianna']], extensions: [], userRemoteConfigs: [[credentialsId: 'ibt', url: 'https://github.com/IBT-learning/ibt-maven.git']])
            }
        }

        stage('Validate') {
            steps {
                sh 'mvn validate'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                withMaven(maven: 'maven_3.9.3') {
                    sh 'mvn package'
                }
            }
        }

        stage('Deploy (configFile)'){
            steps{
                configFileProvider([configFile(fileId: 'artifactory-settings', variable: 'mvn_setting_config')]) {
                    sh 'mvn deploy -s $mvn_setting_config'
                }
                withMaven(maven: 'maven_3.9.3', mavenSettingsConfig: 'artifactory-settings') {
                    sh 'mvn deploy'
                }
            }
        }
    }
}