pipeline {
    agent any
    withMaven(globalMavenSettingsConfig: '--- Use system default settings or file path ---', jdk: '--- Use system default JDK ---', maven: 'Maven 3.8', mavenSettingsConfig: '--- Use system default settings or file path ---') {
    // some block
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello Github'
                checkout changelog: false, poll: false, scm: scmGit(branches: [[name: '*/feature_koby2']], extensions: [], userRemoteConfigs: [[credentialsId: 'for-github', url: 'https://github.com/IBT-learning/ibt-maven.git']])
            }
        }
        stage('validate') {
            steps {
                sh "mvn validate"
            }
        }
    }
}
