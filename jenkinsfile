pipeline {
    agent any
    tools { maven 'maven_3.8'}
    parameters {
        string(name:'Branch_Name', defaultValue: 'main', description: 'enter branch name to build')
    }

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
       stage('Hi') {
            steps {
                echo 'Hi'
            }
       }
       stage('Git Checkout'){
            steps {
                checkout scmGit(branches: [[name: '$Branch_Name']], extensions: [], userRemoteConfigs: [[credentialsId: 'git_James_c', url: 'https://github.com/IBT-learning/ibt-maven.git']])
            }
       }
       stage('List files'){
            when {
                expression{
                    env.BRANCH_NAME == 'main'
                }
            }
            steps {
                sh 'ls'
            }
       }
       stage('testing webhook'){
            steps {
                echo "success webhook"
            }
       }
       stage('invoke python'){
            steps{
                sh 'pwd'
            }
       }
       stage('invoke maven'){
            steps{
                sh 'mvn --version'
            }
       }
       stage('test stage'){
            steps {
                sh 'echo hello'
            }
       }
    }
}
