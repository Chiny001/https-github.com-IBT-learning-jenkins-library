pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
	    stage('Hello Mexy') {
            steps {
                echo 'Hello World, this is my second project'
            }
        }
        stage('Conditional') {
            steps {
                 echo 'Hello World, this is my third line of project'
            }
        }
        stage('git checkout') {
            when {
                  expression{
                       env.Branch_Name =='feature-pumej'
                  }

            }
            steps {
                  git branch: 'feature-pumej', changelog: false, credentialsId: 'jenkin_maven-pumej', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
            }
        }
        stage('list files') {
            steps {
                   bat  'dir'
            }
        }
    }
}