pipeline {
    agent any
    tools {maven 'maven_3.8'}
    environment {
        version = '1.3.5'
        run = 'true'
    }
    parameters {
        string(name: 'Branch_Name', defaultValue: 'main', description: 'enter branch name to build')
    }

    stages {
        stage('Hello') {
            steps {
                echo 'Hello Philip'
            }
        }

        stage('Hi') {
            steps {
                echo 'Hi everyone'
            }
        }

        stage('Git Checkout') {
            steps{
                checkout scmGit(branches: [[name: '$Branch_Name']], extensions: [], userRemoteConfigs: [[credentialsId: '65a2fe5a-7a32-4859-9a03-3a9938037018', url: 'https://github.com/IBT-learning/ibt-maven.git']])
            }

        }

        stage('list files') {

            when {
                expression {
                    env.BRANCH_NAME == 'main'
                }
            }
            steps{
                sh 'ls'
            }
        }

        stage('test') {
                    steps{
                        echo 'hi hi'
                    }
                }

        stage('invoke python'){
            steps{
                sh 'pwd'
            }
        }

        stage('invoke maven') {

            steps{
                sh 'mv --version'
                echo "${env.version}"
                sh 'echo $version'
                echo "${env.run}"
                script{
                    print env.version
                }
            }
            }
        post{
            always{
                echo "Hi, I will always run every damn time!"
            }
        }
        }
    }
}