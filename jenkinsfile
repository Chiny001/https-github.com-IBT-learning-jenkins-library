pipeline {
    agent any
   tool {maven 'maven-3.8'}
   environment {
   version = '1.3.0'
   run = 'true'

   }
   parameters {
        string(name:'Branch_Name', defaultValue: 'main', description: 'Enter branch name to build')
   }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Hi') {
            steps {
                echo 'HI'
            }
        }
          stage('Hi people') {
            steps {
                echo 'My name is Chia'
            }
        }
        stage('Git checkout'){
            steps{
                checkout changelog: false, poll: false, scm: scmGit(branches: [[name: '$Branch_Name']], extensions: [], userRemoteConfigs: [[credentialsId: 'git-credentials', url: 'https://github.com/IBT-learning/ibt-maven.git']])
            }
        }
        stage('List files'){
        when{
            expression{
                BRANCH_NAME == 'feature-Chia'
            }
        }
            steps {
                sh 'ls'
            }
        }
        stage('version'){
            steps{
                sh 'python3 --version'
            }
        }
        stage('invoke python'){
            steps{
                sh 'python3 test.py'
            }
        }
        stage('invoke maven'){
            steps{
                sh 'mvn --version'
            }
        }
        stage('test stage'){
            steps{
                echo "${env.version}"
                echo "${env.run}"
                sh "echo $version"
                script{
                    print env.version
                }
            }
        }
    }
}
