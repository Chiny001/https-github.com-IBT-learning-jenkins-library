pipeline {
    agent any

    parameters {
        string(name: 'Branch_Name', defaultValue: 'main', description: 'enter branch name to build')
    }

    stages {
        stage('Hello') {
            steps {
                echo 'Hello Philip'
            }
        }

        stage('Hi') {
            steps {
                echo 'Hi everyone'
            }
        }

        stage('Git Checkout') {
            steps{
                checkout scmGit(branches: [[name: '$Branch_Name']], extensions: [], userRemoteConfigs: [[credentialsId: '65a2fe5a-7a32-4859-9a03-3a9938037018', url: 'https://github.com/IBT-learning/ibt-maven.git']])
            }

        }

        stage('list files') {

            when {
                expression {
                    env.BRANCH_NAME == 'main'
                }
            }
            steps{
                sh 'ls'
            }
        }

        stage('test') {
                    steps{
                        echo 'hi hi'
                    }
                }
    }
}