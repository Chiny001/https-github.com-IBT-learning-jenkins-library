pipeline {
   environment{
   version ='1,2,3'
   }
   tools {
    maven 'maven_3.8'
   }
    agent any
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Hi') {
            steps {
                echo 'Hi'
                echo "${env.version}"
            }
        }

         stage ('testing hooks'){
          environment{
           version2 = '1,5,0'
       }
             steps {
               echo 'hook tested success'
                echo "${env.version2}"
            }
        }
        stage('mvn version') {
                  steps {
                     sh 'mvn --version'
                  }
              }
    }
        post{
           always {
           emailext body: '', subject: 'test', to: 'reineclaudia126@gmail.com'
           echo 'Build successful'
           }
        }
      }