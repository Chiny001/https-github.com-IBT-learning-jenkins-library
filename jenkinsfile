pipeline {
   environment{
   version ='1,2,3'
   }
    agent any
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Hi') {
            steps {
                echo 'Hi'
                echo "${env.version}"
            }
        }
        stage('test') {
        when{
             expression{
                 env.BRANCH.NAME=='master'
             }
       }

          steps {
                echo 'test'
            }
        }
    }
        post{
           always {
           emailext body: '', subject: 'test', to: 'reineclaudia126@gmail.com'
           echo 'Build successful'
           }
        }
      }