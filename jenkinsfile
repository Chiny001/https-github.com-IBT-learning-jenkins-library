pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Hi') {
            steps {
                echo 'Hi'
            }
        }
        stage('test') {
        when{
             expression{
                 env.BRANCH.NAME=='master'
             }
       }

          steps {
                echo 'test'
            }
        }
        stage('Git checkout') {
                    steps {
                        checkout poll: false, scm: scmGit(branches: [[name: '*/$feature_claudia']], extensions: [], userRemoteConfigs: [[credentialsId: 'IBT-github-claudia', url: 'https://github.com/IBT-learning/ibt-maven.git']])
                        sh 'ls -lrt'
                        sh 'echo $Branch_Name $CHOICES'

                    }
                }
                stage('Testing hooks') {
                            steps {
                                echo 'Hooks tested and success'
                            }
                        }
            }
        }



