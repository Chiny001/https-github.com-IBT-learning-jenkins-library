pipeline {
    environment{
        version = '1.3.0'
       }
       tools {
            maven 'maven_3.8'
        }
     agent any

        stages {
            stage('Hello') {
                steps {
                    echo 'Hello World'
                }
            }
        stage('Hi') {
            steps {
                    echo 'Hi'
                    echo "${env.version}"
                }
            }
        stage('Test') {
            steps {
                    echo 'Test'
                }
            }
        stage('Testing Jenkinfile') {
        when{
            expression{
                env.BRANCH_NAME=='main'
            }
        }
              steps {
                echo 'Jenkinfile'
                }
            }
        stage("Git checkout") {
            steps {
                checkout changelog: false, poll: false, scm: scmGit(branches: [[name: '*/feature_Taiwo']], extensions: [], userRemoteConfigs: [[credentialsId: 'ibt-github', url: 'https://github.com/IBT-learning/ibt-maven.git']])
                sh "ls -lrt"
                sh 'echo $Branch_Name $CHOICES'
                sh "echo trying hooks"
           }
        }
        stage('Testing hooks') {
         environment{
                version2 = '1.5.0'
           }
                     steps {
                        echo 'hooks tested success'
                        echo "${env.version2}"
                     }
               }
        }
        post{
            always{
                emailext body: 'test', subject: 'test', to: 'taiwo71joseph@gmail.com'
                echo "Build successful"
       }
    }
}




