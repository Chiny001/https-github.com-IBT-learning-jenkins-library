pipeline {
    agent any
        parameters {
            string (name: 'Branch_Name' , defaultValue: 'main' , description: 'enter the branch to build')
        }


    stages {
        stage('Hello') {
            steps {
                echo 'Hello '
            }
        }

                    stage('Hello world test') {
                          steps {
                             echo 'Hello world  test'
                           }
                    }

                         stage("Hello World second script2"){

                            steps{
                                  echo "Hello World second script2"
                             }
                         }
                             stage("git checkout"){

                                  steps{
                                    git branch: '$feature-rizme' , changelog: false, credentialsId: 'riz_jenken', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'

                                  }


                              }

                                   stage('list all my list'){
                                              steps{
                                              sh 'ls -lrt'

                                               }

                                    }

     }

}

