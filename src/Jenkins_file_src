pipeline {
    agent any
    environment{
        version ='1.3.0'
    }
    parameters {
        string(name: 'Branch_Name', defaultValue: 'feature-Elena', description: 'please select branch to checkout')
        choice(name: 'CHOICES_test', choices: ['one', 'two', 'three'], description: 'testing choice parameter')
    }

    stages {
        stage('CD to the dir') {
            steps {
                sh 'ls'
                echo "${env.version}"
            }
        }
        stage('New Stage') {
            steps {
                echo 'New stage has been added'
            }
        }
        stage('Another Stage for testing') {
            when {
                expression{
                    env.BRANCH_NAME == 'main'
                }
            }
            steps {
                echo 'Another stage'
            }
        }
        stage('Git checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/$Branch_Name']], extensions: [], userRemoteConfigs: [[credentialsId: 'IBT_Elena', url: 'https://github.com/IBT-learning/ibt-maven.git']])
                sh 'ls -lrt'

            }
        }
        stage('New stage, git hooks') {
            environment{
                version2 ='version 2.6'
            }
            steps {
                echo 'git hooks'
                echo "${env.version2}"
            }
        }

    }
    post{
        always{
            emailext body: 'hello from Jenkins Job', subject: 'test notification', to: 'lekollc@yahoo.com'
            echo 'Trying emails'
        }
    }
}